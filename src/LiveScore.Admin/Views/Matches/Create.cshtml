@model LiveScore.Admin.Models.MatchViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedTeam1" class="control-label"></label>
                <select asp-for="SelectedTeam1" class="form-control" asp-items="@Model.Teams1"></select>
                <span asp-validation-for="SelectedTeam1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedTeam2" class="control-label"></label>
                <select asp-for="SelectedTeam2" class="form-control" asp-items="@Model.Teams2"></select>
                <span asp-validation-for="SelectedTeam2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team1Score" class="control-label"></label>
                <input asp-for="Team1Score" class="form-control" />
                <span asp-validation-for="Team1Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team2Score" class="control-label"></label>
                <input asp-for="Team2Score" class="form-control" />
                <span asp-validation-for="Team2Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList<LiveScore.Models.MatchStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
